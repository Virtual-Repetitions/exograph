{
  "name": "exograph",
  "version": "1.0.0",
  "description": "Exograph development dependencies",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1"
  },
  "scripts": {
    "commitlint": "commitlint",
    "lint": "cargo fmt --all -- --check && cargo clippy --all-targets --all-features -- -D warnings --no-deps",
    "lint:fix": "cargo fmt --all",
    "test:integration:local": "./target/debug/exo test integration-tests",
    "bump:minor": "./scripts/bump-version.sh minor",
    "bump:major": "./scripts/bump-version.sh major",
    "bump:patch": "./scripts/bump-version.sh patch"
  }
}
